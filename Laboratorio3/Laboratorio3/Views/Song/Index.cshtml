@model Laboratorio3.Models.SongModel;

@{
    ViewData["Title"] = "Song";
}

<h1>@ViewBag.MainTitle</h1><br />

<div>
    <div style = "width:50%; display: table-cell;">
        <label style = "font-size: 28px">Song name:</label><br /><br />
        <label style = "font-size: 28px">Artist:</label><br /><br />
        <label style = "font-size: 28px">Genre:</label><br /><br />
        <label style = "font-size: 28px">Release date:</label><br /><br />
        <label style = "font-size: 28px">Duration:</label><br /><br />
    </div>

    <div style = "width:50%; display: table-cell;">
        <label style = "font-size: 28px">@Model.Name</label><br /><br />
        <label style = "font-size: 28px">@Model.Artist</label><br /><br />
        <label style = "font-size: 28px">@Model.Genre</label><br /><br />
        <label style = "font-size: 28px">@Model.ReleasedDate</label><br /><br />
        <label style = "font-size: 28px">@Model.Duration</label><br /><br />
    </div>
</div>