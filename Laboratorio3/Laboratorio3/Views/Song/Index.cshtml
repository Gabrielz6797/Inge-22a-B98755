@{
}

@model Laboratorio3.Models.SongModel;

@{
    ViewData["Title"] = "Song";
}

<h1>@ViewBag.MainTitle</h1><br />

<div>
    <div style = "width: 75%; display: table-cell;">
        <label style = "font-size: 28px; padding: 3px 0px;">Song name:</label><br /><br />
        <label style = "font-size: 28px; padding: 3px 0px;">Artist:</label><br /><br />
        <label style = "font-size: 28px; padding: 3px 0px;">Genre:</label><br /><br />
        <label style = "font-size: 28px; padding: 3px 0px;">Release date:</label><br /><br />
        <label style = "font-size: 28px; padding: 3px 0px;">Duration:</label><br /><br />
    </div>

    <div style = "width: 75%; display: table-cell;">
        <label style = "font-size: 28px; border-style: groove; border-width: 3px; border-radius: 3px; width: 200%">@Model.Name</label><br /><br />
        <label style = "font-size: 28px; border-style: groove; border-width: 3px; border-radius: 3px; width: 200%">@Model.Artist</label><br /><br />
        <label style = "font-size: 28px; border-style: groove; border-width: 3px; border-radius: 3px; width: 200%">@Model.Genre</label><br /><br />
        <label style = "font-size: 28px; border-style: groove; border-width: 3px; border-radius: 3px; width: 200%">@Model.ReleasedDate.ToShortDateString()</label><br /><br />
        <label style = "font-size: 28px; border-style: groove; border-width: 3px; border-radius: 3px; width: 200%">@Model.Duration</label><br /><br />
    </div>
</div>